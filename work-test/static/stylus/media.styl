@media screen and (max-width: 1200px)
	#header
		.top-line
			.phone
				font-size 24px
				span
					&::before
						top -6px
						left: -40px
						width 24px
						height 42px
						
@media screen and (max-width: 992px)
	#contacts
		.contacts-container
			top 0
			width 100%
			position absolute
			.contacts-text
				h1
					margin-bottom 20px
				.contacts-address
					margin-bottom 15px
					padding-left 45px
					font-size 22px
				.contacts-works
					margin-bottom 15px
					padding-left 45px
					font-size 16px
				.contacts-phone
					margin-bottom 15px
					padding-left 45px
					font-size 24px
				.contacts-info
					padding-left 45px
					font-size 20px

	#header
		.top-line
			.phone
				span
					&::before
						display none
		.menu
			&_container
				ul.menu-desktop
					li
						a
							padding 20px 0
							margin-right 30px
							
	#about
		.about-main
			margin-bottom 60px
			img
				width 100%
			p
				margin-left 0
		.about-advantages
			h3
				margin-bottom 50px
			&_item
				height 240px
				text-align center
				margin-bottom 80px
				img
					margin-bottom 20px
				p
					width 290px
					margin 0 auto
							
@media screen and (max-width: 768px)
	#footer
		padding 30px 0
		.footer-logo
			margin-bottom 10px
			text-align center
		.footer-socials
			margin-bottom 10px
			text-align center
			width 100%
			span
				&:last-child
					margin-right 0
		.footer-address
			text-align center
		.footer-phone
			text-align center
		.footer-contact-socials
			margin-bottom 10px
			text-align center
			span
				&:first-child
					margin-left 0
			
	.section
		padding 30px 0
		&-header
			margin-bottom 20px

	.btn
		padding 10px 35px
		font-size 16px

	#header
		.top-line
			.logo
				line-height 0
				padding-top 20px
				height 60px
				text-align center
			.menu
				&_container
					ul.menu-desktop
						li
							a
								font-size 14px
								padding 15px 0
								margin-right 20px
								
	#banner
		.banner
			&-container
				.banner-wrapper
					.banner-text
						text-align center
						margin-left 40px
						margin-right 40px
						display inline-block
						color #fff
						h2
							width 100%
							max-width 755px
							margin-bottom 50px
							font-size 26px
							
	#about
		.about-main
			margin-bottom 40px
			img
				margin-bottom 20px
		.about-advantages
			h3
				font-size 24px
				margin-bottom 50px
			&_item
				margin-bottom 20px
			.btn-block
				text-align center
							
@media screen and (max-width: 650px)
	#header
		.menu
			&_container
				ul.menu-desktop
					display none
				.mobile-menu_button
					display block
					