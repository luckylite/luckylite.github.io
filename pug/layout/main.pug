block variables

doctype html
html(lang="ru-RU")
	head
		meta(charset="utf-8")
		title #{title}
		<!--[if IE]>
		meta(http-equiv='X-UA-Compatible', content="IE = edge")
		<![endif]-->
		meta(name="viewport" content="width=device-width,initial-scale=1")
		meta(name="keywords" content="")

		<!--[if lt IE 9]>
		script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
		<![endif]-->
	body(class=pageClass)
		.wrapper
			.hide
				.menu-mobile
					.menu-mobile_overlay
					.menu-mobile_container
						.menu-mobile_header
							.logo
								img(src="img/logo.svg" title="Reversales" alt="Reversales")
							.menu-mobile_exit
								img(src="img/header/close-button.svg", alt="Menu Mobile Close")
						.menu-mobile_text
							ul
								li
									a(href="index.html") Главная
								li
									a(href="shops.html") Все магазины
								li
									a(href="news.html") Новости
								li
									a(href="#") FAQ
								li
									a(href="#") Контакты
								li
									a(href="#") Войти в аккаунт
				.search-form.hide-elem
					.container
						.row
							form(action="")
								input(type="text" placeholder="Поиск...")
								button(type="submit")
									i.fas.fa-search
			include ../modules/header
			.content
				block content
			include ../modules/footer
		script(src="libs/jquery/jquery.min.js")
		script(src="js/main.js")
			
		block script

		link(rel="stylesheet" type='text/css' href="libs/normalize/normalize.min.css")
		link(rel="stylesheet" type='text/css' href="libs/bootstrap-grid/boostrap-grid.css")
		link(rel="stylesheet" type='text/css' href="libs/font-awesome/css/fontawesome-all.min.css")

		block libs

		link(rel="stylesheet" type='text/css' href="css/fonts.min.css")
		link(rel="stylesheet" type='text/css' href="css/main.min.css")
		link(rel="stylesheet" type='text/css' href="css/media.min.css")